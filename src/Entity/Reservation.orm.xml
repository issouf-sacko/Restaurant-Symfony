<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="annotation\Reservation" table="reservation">
    <indexes>
      <index name="I_FK_RESERVATION_client" columns="idClient"/>
    </indexes>
    <id name="idreserv" type="integer" column="idReserv">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="datereserv" type="date" column="dateReserv" nullable="false"/>
    <field name="nbcouvert" type="integer" column="nbCouvert" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="heurearrive" type="time" column="heureArrive" nullable="false"/>
    <many-to-one field="idclient" target-entity="Client" fetch="LAZY">
      <join-columns>
        <join-column name="idClient" referenced-column-name="id_Pers"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
