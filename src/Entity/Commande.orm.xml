<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="annotation\Commande" table="commande">
    <indexes>
      <index name="I_FK_commande_client" columns="id_Client"/>
    </indexes>
    <id name="idcmd" type="integer" column="idCmd">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="datecmd" type="date" column="dateCmd" nullable="false"/>
    <many-to-one field="idClient" target-entity="Client" fetch="LAZY">
      <join-columns>
        <join-column name="id_Client" referenced-column-name="id_Pers"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="idprod" target-entity="Produit" mapped-by="idcmd" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
