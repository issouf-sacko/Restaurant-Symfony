  <entity name="annotation\Client" table="client">
    <id name="idPers" association-key="true"/>
    <field name="adresse" type="string" column="adresse" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <one-to-one field="idPers" target-entity="Personne" fetch="LAZY">
      <join-columns>
        <join-column name="id_Pers" referenced-column-name="id_Pers"/>
      </join-columns>
    </one-to-one>
  </entity>
</doctrine-mapping>
